	collaborator = {张, 晓玫},
	year = {2022},
	keywords = {包容审慎监管, 金融监管, 金融新业态, 理财产品 New financial formats, 银行服务实体经济, 银行绩效, Bank performance, Banking services to the real economy, Financial products, Financial supervision, Inclusive Prudential Regulation},
	file = {金融新业态监管对商业银行绩效的影响研究_刘时雨.pdf:/Users/chendongyu/Zotero/storage/MBR4K6QL/金融新业态监管对商业银行绩效的影响研究_刘时雨.pdf:application/pdf},
